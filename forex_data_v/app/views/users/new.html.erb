<h1>Sign Up</h1>
<%= form_for @user, url: users_path do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username %>
  
  <%= f.label :password %>
  <%= f.password_field :password %>
  
  <%= f.submit "Sign Up" %>
<% end %>

<% if flash[:errors] %>
  <div class="error">
    <% flash[:errors].each do |error| %>
      <%= error %><br>
    <% end %>
  </div>
<% end %>